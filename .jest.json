{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": "/test/(.*).spec.ts",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/src/"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "!build/**/**/mocks/*.js",
    "build/**/*.js",
    "!build/**/*.test.js",
    "!build/**/test/**/*.js",
    "!**/node_modules/**"
  ]
}
